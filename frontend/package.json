{
   "name": "@ifixit/commerce-frontend",
   "license": "UNLICENSED",
   "version": "1.0.0",
   "description": "Next.js frontend for iFixit e-commerce",
   "author": "Massimo",
   "repository": {
      "url": "https://github.com/iFixit/react-commerce"
   },
   "scripts": {
      "dev": "concurrently -n \"Next,codegen\" -c \"blue,magenta\" \"pnpm run dev:next\" \"pnpm run dev:codegen\"",
      "dev:next": "NODE_OPTIONS=\"--dns-result-order ipv4first\" next dev",
      "dev:codegen": "pnpm run codegen:download-strapi-schema && pnpm run codegen:watch",
      "codegen:watch": "cross-env NODE_OPTIONS=\"--dns-result-order ipv4first\" DOTENV_CONFIG_PATH=./.env.development graphql-codegen -r dotenv/config --config codegen/config.ts --watch",
      "codegen:download-strapi-schema": "cross-env NODE_OPTIONS=\"--dns-result-order ipv4first\" DOTENV_CONFIG_PATH=./.env.development graphql-codegen -r dotenv/config --config codegen/strapi-schema-config.ts",
      "codegen:download-shopify-storefront-schema": "NODE_OPTIONS=\"--dns-result-order ipv4first\" node ./lib/shopify-storefront-sdk/generate-schema.js",
      "build": "NODE_OPTIONS=\"--dns-result-order ipv4first\" next build",
      "start": "NODE_OPTIONS=\"--dns-result-order ipv4first\" next start",
      "type-check": "tsc --pretty --noEmit",
      "format": "prettier --write .",
      "lint": "eslint . --ext ts --ext tsx --ext js",
      "test": "jest",
      "test-all": "pnpm run lint && pnpm run type-check && pnpm run test",
      "playwright:run": "playwright test",
      "playwright:debug": "DEBUG=pw:api playwright test --project=\"Desktop Chrome\" --debug"
   },
   "dependencies": {
      "@chakra-ui/react": "2.8.1",
      "@core-ds/primitives": "2.5.2",
      "@emotion/react": "11.10.5",
      "@emotion/styled": "11.10.5",
      "@fortawesome/fontawesome-svg-core": "6.4.0",
      "@fortawesome/free-solid-svg-icons": "6.4.0",
      "@fortawesome/pro-duotone-svg-icons": "6.4.0",
      "@fortawesome/pro-solid-svg-icons": "6.4.0",
      "@fortawesome/react-fontawesome": "0.2.0",
      "@ifixit/analytics": "workspace:*",
      "@ifixit/app": "workspace:*",
      "@ifixit/auth-sdk": "workspace:*",
      "@ifixit/breadcrumbs": "workspace:*",
      "@ifixit/cart-sdk": "workspace:*",
      "@ifixit/footer": "workspace:*",
      "@ifixit/helpers": "workspace:*",
      "@ifixit/icons": "workspace:*",
      "@ifixit/ifixit-api-client": "workspace:*",
      "@ifixit/local-storage": "workspace:*",
      "@ifixit/menu": "workspace:*",
      "@ifixit/newsletter-sdk": "workspace:*",
      "@ifixit/sentry": "workspace:*",
      "@ifixit/shopify-storefront-client": "workspace:*",
      "@ifixit/tracking-hooks": "workspace:*",
      "@ifixit/ui": "workspace:*",
      "@sentry/nextjs": "7.60.1",
      "@sentry/tracing": "7.53.1",
      "@tanstack/react-query": "4.14.5",
      "@vercel/analytics": "1.0.1",
      "algoliasearch": "4.13.1",
      "cookie": "0.5.0",
      "dayjs": "1.10.5",
      "framer-motion": "10.12.0",
      "graphql": "15.5.3",
      "ioredis": "5.2.4",
      "lite-youtube-embed": "^0.2.0",
      "lodash": "4.17.21",
      "lru-cache": "7.10.1",
      "next": "13.4.12",
      "nextjs-progressbar": "0.0.14",
      "query-string": "7.0.1",
      "react": "18.2.0",
      "react-dom": "18.2.0",
      "react-error-boundary": "4.0.10",
      "react-instantsearch-router-nextjs": "7.0.2",
      "react-instantsearch": "7.0.2",
      "react-lite-yt-embed": "1.2.7",
      "react-schemaorg": "2.0.0",
      "schema-dts": "1.1.0",
      "sharp": "0.30.7",
      "snarkdown": "2.0.0",
      "zod": "3.18.0"
   },
   "devDependencies": {
      "@babel/core": "7.17.9",
      "@babel/preset-env": "7.18.6",
      "@babel/preset-typescript": "7.18.6",
      "@graphql-codegen/cli": "4.0.0",
      "@graphql-codegen/schema-ast": "4.0.0",
      "@graphql-codegen/typescript": "2.7.4",
      "@graphql-codegen/typescript-generic-sdk": "2.5.1",
      "@graphql-codegen/typescript-operations": "2.5.4",
      "@ifixit/tsconfig": "workspace:*",
      "@next/bundle-analyzer": "12.1.6",
      "@playwright/test": "1.29.1",
      "@svgr/webpack": "6.5.1",
      "@testing-library/dom": "8.19.0",
      "@testing-library/jest-dom": "5.16.1",
      "@testing-library/react": "13.4.0",
      "@testing-library/user-event": "13.5.0",
      "@types/cookie": "0.5.1",
      "@types/jest": "27.4.0",
      "@types/node": "18.11.5",
      "@types/react": "18.2.8",
      "@types/react-dom": "18.2.7",
      "@types/react-virtualized-auto-sizer": "1.0.1",
      "@types/react-window": "1.8.4",
      "@typescript-eslint/eslint-plugin": "6.7.0",
      "@typescript-eslint/parser": "6.7.0",
      "babel-jest": "28.1.3",
      "concurrently": "6.2.1",
      "dotenv": "10.0.0",
      "eslint": "7.23.0",
      "eslint-config-next": "13.4.1",
      "eslint-config-prettier": "7.2.0",
      "eslint-plugin-jest": "27.2.3",
      "eslint-plugin-react": "7.23.0",
      "eslint-plugin-react-hooks": "4.2.0",
      "graphql-codegen-typescript-validation-schema": "0.9.0",
      "graphql-tag": "2.12.6",
      "graphqurl": "1.0.1",
      "identity-obj-proxy": "3.0.0",
      "jest": "28.1.2",
      "jest-css-modules-transform": "^4.4.2",
      "jest-environment-jsdom": "28.1.2",
      "jest-watch-typeahead": "1.1.0",
      "msw": "0.49.2",
      "next-plugin-bundle-stats": "^4.1.11",
      "playwright-msw": "2.1.0",
      "prettier": "2.7.1",
      "typescript": "5.2.2",
      "webpack": "5.73.0"
   },
   "nextBundleAnalysis": {
      "budget": null,
      "budgetPercentIncreaseRed": 20,
      "showDetails": true,
      "minimumChangeThreshold": 500
   },
   "msw": {
      "workerDirectory": "public"
   },
   "pnpm": {
      "peerDependencyRules": {
         "allowedVersions": {
            "graphql": "15"
         }
      }
   }
}
